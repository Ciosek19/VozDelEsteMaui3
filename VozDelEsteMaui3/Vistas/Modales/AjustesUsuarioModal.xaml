<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="VozDelEsteMaui3.Vistas.Modales.AjustesUsuarioModal"
            xmlns:vm="clr-namespace:VozDelEsteMaui3.ViewModels"
            xmlns:m="clr-namespace:VozDelEsteMaui3.Modelos"
            Title="AjustesUsuarioModal"
            BackgroundColor="#80000000"
            NavigationPage.HasNavigationBar="False"
            Padding="40">

   <ScrollView>
      <Border
      WidthRequest="400"
      HeightRequest="600"
      BackgroundColor="Black">
         <VerticalStackLayout 
            Spacing="10"
            WidthRequest="350">

            <Label Text="Preferencias de visualizaciÃ³n" FontAttributes="Bold" FontSize="18" />
            <FlexLayout>
               <CheckBox IsChecked="{Binding Preferencias.MostrarClima}" />
            <Label 
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="Center"
               Text="Mostrar clima" />
            </FlexLayout>

            <FlexLayout>
               <CheckBox IsChecked="{Binding Preferencias.MostrarCotizaciones}" />
               <Label 
               VerticalTextAlignment="Center"
               Text="Mostrar cotizaciones" />
            </FlexLayout>

            <FlexLayout>
               <CheckBox IsChecked="{Binding Preferencias.MostrarNoticias}" />
               <Label 
               VerticalTextAlignment="Center"
               Text="Mostrar noticias" />
            </FlexLayout>

            <FlexLayout>
               <CheckBox IsChecked="{Binding Preferencias.MostrarPeliculas}" />
               <Label 
               VerticalTextAlignment="Center"
               Text="Mostrar peliculas" />
            </FlexLayout>

            <Button Text="Aceptar"
                Command="{Binding AplicarCambiosCommand}" />
         </VerticalStackLayout>
      </Border>
   </ScrollView>
</ContentPage>