<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VozDelEsteMaui3.Vistas.Modales.MenuUsuarioModal"
             xmlns:vm="clr-namespace:VozDelEsteMaui3.ViewModels"
             x:DataType="vm:MainPageViewModel"
             Title="MenuUsuarioModal"
             BackgroundColor="#80000000"
             NavigationPage.HasNavigationBar="False"
             Padding="40">

   <AbsoluteLayout>

      <!-- Ventana modal centrada -->
      <Border
         BackgroundColor="White"
         StrokeShape="RoundRectangle 12"
         Padding="20"
         WidthRequest="250"
         AbsoluteLayout.LayoutBounds="0.5,0.5,AutoSize,AutoSize"
         AbsoluteLayout.LayoutFlags="PositionProportional">

         <VerticalStackLayout Spacing="16">
            <Button Text="Información personal"
                        Command="{Binding VerInformacionCommand}" />
            <Button Text="Ajustes"
                        Command="{Binding AbrirAjustesCommand}" />
            <Button Text="Cerrar sesión"
                        Command="{Binding CerrarSesionCommand}" />
         </VerticalStackLayout>
      </Border>

      <!-- Botón de cierre flotante -->
      <Button Text="✕"           
                BackgroundColor="#fff"
                TextColor="{StaticResource ColorSecundario}"
                FontSize="16"
               CornerRadius="32"
                WidthRequest="32"
                HeightRequest="32"
                Command="{Binding CerrarModalCommand}"
                AbsoluteLayout.LayoutBounds="0.5,0.5,50,50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
              >
         <Button.TranslationX>125</Button.TranslationX>
         <!-- mitad fuera -->
         <Button.TranslationY>-100</Button.TranslationY>
         <!-- mitad arriba -->
      </Button>

   </AbsoluteLayout>

</ContentPage>