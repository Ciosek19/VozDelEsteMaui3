<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="VozDelEsteMaui3.Vistas.AgregarPatrocinador"
             Title="AgregarPatrocinador">
   <ScrollView>
      <VerticalStackLayout Padding="20" Spacing="15">

         <!-- Nombre -->
         <Label Text="Nombre del patrocinador" />
         <Entry Text="{Binding Patrocinador.Nombre}" Placeholder="Ej: Fundación Sol" />

         <!-- Logo -->
         <Label Text="URL del logo" />
         <Entry Text="{Binding Patrocinador.LogoUrl}" />

         <maps:Map x:Name="Mapa"
              MapClicked="OnMapClicked"
              IsShowingUser="True"
              VerticalOptions="Fill" />

         <!-- Coordenadas seleccionadas -->
         <Label Text="Latitud seleccionada:" />
         <Label Text="{Binding Patrocinador.Direccion.Latitud}" />

         <Label Text="Longitud seleccionada:" />
         <Label Text="{Binding Patrocinador.Direccion.Longitud}" />

         <!-- Botón de guardar -->
         <Button Text="Guardar patrocinador"
                    Command="{Binding GuardarCommand}" />

      </VerticalStackLayout>
   </ScrollView>

</ContentPage>